{

  "node": {
    "id": "envoyproxy-edge",
    "cluster": "dkfbasel"
  },

  "admin": {
    "access_log_path": "/var/log/envoy/admin_access.log",
    "address": {
      "socket_address": {
        "address": "0.0.0.0",
        "port_value": "9901"
      }
    }
  },

  "static_resources": {

    "listeners": [
      {
        "name": "envoyproxy-edge",
        "address": {
          "socket_address": {
            "address": "127.0.0.1",
            "port_value": "8081",
          }
        },
       "filter_chains": [
         {
           "filters": [
             {
               "name": "envoy.tcp_proxy",
               "config": {
                 "stat_prefix": "envoyproxy-edge",
                 "cluster": "remote",
                 "idle_timeout": "5s",
                 "max_connect_attempts": 5,
                 "access_log": {
                     "name": "envoy.file_access_log",
                     "config": {
                         "path": "/var/log/envoy/tcp_access.log"
                     }
                 }
               }
             }
           ]
         }
       ]
     }
    ],

    "clusters": [

        {
          "name": "remote",
          "type": "strict_dns",
          "connect_timeout": "0.25s",
          "hosts": [
            {
              "socket_address": {
                "address":"178.209.48.181",
                "port_value": "9292"
              }
            }
          ]
        },

    ]
  }

}
