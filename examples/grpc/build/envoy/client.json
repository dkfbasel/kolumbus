{

  "node": {
    "id": "client-envoy",
    "cluster": "dkfbasel"
  },

  "admin": {
    "access_log_path": "/var/log/envoy/admin_access.log",
    "address": {
      "socket_address": {
        "address": "0.0.0.0",
        "port_value": "9901"
      }
    }
  },

  "static_resources": {

    "listeners": [
      {
        "name": "client-outbound-listener",
        "address": {
          "socket_address": {
            "address": "127.0.0.1",
            "port_value": "8081",
          }
        },
        "filter_chains": [
          {
            "filters": [
              {
                "name": "envoy.http_connection_manager",
                "config": {
                  "codec_type": "http2",
                  "stat_prefix": "service_helloworld_egress",
                  "http_filters": [{
                    "name": "envoy.router"
                  }],
                  "rds": {
                    "route_config_name": "kolumbus_routes",
                    "config_source": {
                      "api_config_source": {
                        "api_type": "rest",
                        "cluster_name": ["xds_cluster"],
                        "refresh_delay": "5s"
                      }
                    }
                  },

                }
              }
            ]
          }
        ]
      }
    ],

    "clusters": [

      {
        "name": "xds_cluster",
        "type": "strict_dns",
        "connect_timeout": "0.25s",
        "hosts": [
          {
            "socket_address": {
              "address": "kolumbus",
              "port_value": "80"
            },
          }
        ]
      }

    ]
  },

  "dynamic_resources": {
    "cds_config": {
      "api_config_source": {
        "api_type": "rest",
        "cluster_name": ["xds_cluster"],
        "refresh_delay": "5s"
      }
    }
  },

}
