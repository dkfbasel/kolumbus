{

  "node": {
    "id": "kolumbus-envoyproxy",
    "cluster": "kolumbus"
  },

  "admin": {
    "access_log_path": "/app/envoy/log/admin_access.log",
    "address": {
      "socket_address": {
        "address": "0.0.0.0",
        "port_value": "9901"
      }
    }
  },

  "static_resources": {

    "listeners": [
      {
        "name": "kolumbus-proxy-listener",
        "address": {
          "socket_address": {
            "address": "0.0.0.0",
            "port_value": "8080",
          }
        },
        "filter_chains": [
          {
            "filters": [

              {
                "name": "envoy.http_connection_manager",
                "config": {
                  "codec_type": "http2",
                  "stat_prefix": "proxy-local",
                  "http_filters": [{"name": "envoy.router"}],
                  "rds": {
                    "route_config_name": "kolumbus_routes",
                    "config_source": {
                      "api_config_source": {
                        "api_type": "rest",
                        "cluster_names": ["xds_cluster"],
                        "refresh_delay": "5s"
                      }
                    }
                  }
                }
              },

              {
                "name": "envoy.tcp_proxy",
                "config": {
                  "stat_prefix": "proxy-remote",
                  "cluster": "remote_cluster",
                  "idle_timeout": "5s",
                  "max_connect_attempts": 5,
                  "access_log": {
                    "name": "envoy.file_access_log",
                    "config": {
                      "path": "/app/envoy/log/tcp_proxy.log"
                    }
                  }
                }
              }

            ]
          }
        ]
      }
    ],

    "clusters": [

      {
        "name": "xds_cluster",
        "type": "strict_dns",
        "connect_timeout": "0.25s",
        "hosts": [
          {
            "socket_address": {
              "address": "127.0.0.1",
              "port_value": "80"
            },
          }
        ]
      },

      {
        "name": "remote_cluster",
        "type": "strict_dns",
        "connect_timeout": "0.25s",
        "hosts": [
          {
            "socket_address": {
              "address":"178.209.48.181",
              "port_value": "9292"
            }
          }
        ]
      },

    ]
  },

  "dynamic_resources": {
    "cds_config": {
      "api_config_source": {
        "api_type": "rest",
        "cluster_names": ["xds_cluster"],
        "refresh_delay": "5s"
      }
    }
  }

}
